{
  "version": "2.0.0",
  "tasks": [
    {
        "label": "Create Package",
        "type": "shell",
        "command": ".venv\\Scripts\\pip.exe install build && .venv\\Scripts\\python.exe -m build --wheel && .venv\\Scripts\\pip.exe install ./dist/silkit_py-1.0.3-cp312-cp312-win_amd64.whl --force-reinstall",
        "group": "none",
        "problemMatcher": "$python"
    },
    {
        "label": "Run Test",
        "type" : "shell",
        "command": ".venv\\Scripts\\python.exe -m pytest -s",
        "group": "none",
        "problemMatcher": "$python"
    },
    {
        "label": "Run Linter(Ruff)",
        "type" : "shell",
        "command": ".venv\\Scripts\\ruff.exe check . --fix && .venv\\Scripts\\ruff.exe format .",
        "group": "none",
        "problemMatcher": "$python"
    },
    {
      "label": "freeze venv",
      "type": "shell",
      "command": ".venv\\Scripts\\pip.exe freeze > requirements.txt",
      "group": "none",
      "problemMatcher": "$python"
    },
    {
      "label": "Clean venv",
      "type": "shell",
      "command": ".venv\\Scripts\\pip.exe uninstall -y SilKit_py",
      "group": "none",
      "problemMatcher": "$python"
    }
  ]
}
